<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.microvolunteer.platform.dao.mapper.HandicapInfoRegisterMapper">
    <sql id="getHandicapInfo">
        select
            HandicapInfo.handicapped_id,
            HandicapInfo.handicap_type,
            HandicapInfo.handicap_level,
            HandicapInfo.reliability_th,
            HandicapInfo.severity,
            HandicapInfo.comment
        from
            HandicapInfo
        where
            handicaped_id = #{handicaped_id}
    </sql>
    <insert id="registerHandicapInfo">
        insert into HandicapInfo(
            handicapped_id
            ,handicap_type
            ,handicap_level
            ,reliability_th
            ,severity
            ,comment)
        values(
            #{handicapped_id}
            ,${handicap_type}
            ,${handicap_level}
            ,${reliability_th}
            ,${severity}
            ,#{comment}
            )
    </insert>
</mapper>
